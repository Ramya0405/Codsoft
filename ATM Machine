package Codsoft;
import java.util.Scanner;
public class ATM_machine {
    public static void main(String[] args) {
    int withdrawal,deposit,balance = 100000;
    Scanner sc = new Scanner(System.in);
    while(true){
        System.out.println("Enter an choice to perform a task:");
        int choice = sc.nextInt();
        switch(choice){
          case 1 : 
          System.out.println("Enter the amount to withdrwal:");
          withdrawal = sc.nextInt();
          if(balance>=withdrawal){
             balance =  balance - withdrawal;
             System.out.println("please Collect your money");
          }
          else{
            System.out.println("Insufficient balance");
          }
          System.out.println("");
          break;
          case 2 : System.out.println("Enter the amount to deposit");
          deposit = sc.nextInt();
          balance = balance + deposit;
          System.out.println("Money has been successfully deposited");
          System.out.println("");
          break;
          case 3 : System.out.println("Balance :"+ balance);
          System.out.println("");
          break;
          case 4 : System.exit(0);
        }
      }
    }
}
